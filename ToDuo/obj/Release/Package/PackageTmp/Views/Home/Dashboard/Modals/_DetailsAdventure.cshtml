

@{
    <link rel="stylesheet" type="text/css" href="~/Content/Custom/Index/AddModal.css" />
}
<!-- Modal -->
<div class="modal fade" id="DetailsAdventureModal" tabindex="-1" role="dialog" aria-labelledby="DetailsAdventureModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/Json/UpdateAdventure" method="post" id="DetailsAdventureForm">
                <div class="modal-header" style="border-bottom: none;">
                    <div class="col-md-3" style="padding-left: 0px;">
                        <button type="submit" id="DetailSaveAdventuresBtn" class="btn" itemid="0">Save</button>
                    </div>
                    <div class="col-md-6 text-center">
                        <h3 class="modal-title" id="editpostlbl">Edit This Post</h3>
                    </div>

                    <div class="col-md-3">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>


                </div>
                <div class="modal-body">

                    <div class="ModalContentContainer">
                        <div class="ModalLeftSide">
                            <div id="ModalDetailDragAndDropImageContainer">
                                <i class="fa fa-camera-retro " id="DragAndDropModalIcon" title="Adventure Place Holder"></i>
                                <h4 id="uploadText">Paste Image Address Below!</h4>

                            </div>
                            <div class="AddTagsContainer">
                                <input type="text" class="form-control descriptionsModal" placeholder="Paste image URL from website Here" id="DetailAddAdventureImageTxt" name="ImageURL" />
                                <i class="fa fa-globe-asia CategoryListIcons TagAddIcon"></i>
                            </div>
                        </div>

                        <div class="ModalRightSide">
                            <input type="text" class="form-control" placeholder="Add Your Title" id="DetailAddAdventureTitleTxt" name="Title" />
                            <div class="PersonWhoAddedContainer">
                                <div class="thumbnailProfilePicture">
                                    <img src="~/Content/Images/AppImages/NoProfilePicture.jpg" class="BannerImages ProfilePicture" />
                                </div>
                                <div class="PersonWhoAddedDetails noMargins">
                                    <h6 class="noMargins bold" id="DetailOwnerName">Kevin Nguyen</h6>
                                    <p class="noMargins" id="DetailBoardAmount">10 boards</p>
                                    <p class="noMargins" id="DetailCreatedDate">04/17/2022</p>
                                </div>
                            </div>
                            <textarea rows="2" cols="9" class="form-control descriptionsModal" placeholder="Any Description About this?" id="DetailAddAdventureDescriptionTxt" name="Description"></textarea>

                            <div class="col-md-12 AddTagsContainer">
                                <input type="text" class="form-control descriptionsModal" placeholder="Add A Website URL for more Info" id="DetailAddAdventureWebsiteTxt" name="WebsiteUrl" />
                                <a href="#" id="adventureLink" target="_blank"><i class="fa fa-globe CategoryListIcons TagAddIcon"></i></a>
                            </div>


                            <div class="col-md-6 AddTagsContainer">
                                <input type="text" class="form-control descriptionsModal" placeholder="Address" id="DetailAddAdventureLocationTxt" name="Location" />
                                <i class="fa fa-map-marker CategoryListIcons TagAddIcon"></i>
                            </div>

                            <div class="col-md-6 AddTagsContainer">
                                <input type="text" class="form-control descriptionsModal" placeholder="Tags: Seattle, Parks, FoodTrucks, etc..." id="DetailAddAdventureTagsTxt" name="Tags" />
                                <i class="fa fa-tags CategoryListIcons TagAddIcon"></i>
                            </div>

                            <div class="col-md-12 taglblContainer">
                                <ul id="DetailTagWrapper">
                                    <!--Comes from addAdventureModel.js-->
                                </ul>
                            </div>

                        </div>
                    </div>

                </div>

            </form>
        </div>

    </div>
</div>

<script type="module" src="~/Scripts/Custom/DashBoard/Modals/Views/AddAdventureModel.js"></script>