
@{
    ViewBag.Title = "Signup";
    <link rel="stylesheet" type="text/css" href="~/Content/Custom/Login/Login.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Custom/Signup/Signup.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Custom/Shared/SharedClasses.css" />
}

<div id="LoginBody">
    <div id="LoginContainer" class="defaultBoxShadow">
        <div id="LoginLogoContainer">
            <div id="LogoBackground" class="defaultBoxShadow"><i class="fa fa-user-alt" id="LoginIcon"></i></div>
        </div>
        <form action="/Authentication/SignUserUp" method="post" id="SignupForm">
            <div id="inputFields">
                <div id="UsernameContainer" class="LoginInputContainers col-md-6">
                    <div id="userFieldIconContainer" class="defaultBoxShadow"><i class="fa fa-user" id="userFieldIcon"></i></div>
                    <div id="userFieldContainer"><input type="email" name="Email" id="EmailInputTxt" class="form-control inputFields defaultBoxShadow" placeholder="Email" required/></div>
                </div>

                <div id="UsernameContainer" class="LoginInputContainers col-md-6">
                    <div id="userFieldIconContainer" class="defaultBoxShadow"><i class="fa fa-child" id="userFieldIcon"></i></div>
                    <div id="userFieldContainer"><input type="text" name="Firstname" id="FirstNameInputTxt" class="form-control inputFields defaultBoxShadow" placeholder="First Name" required/></div>
                </div>

                <div id="UsernameContainer" class="LoginInputContainers col-md-6">
                    <div id="userFieldIconContainer" class="defaultBoxShadow"><i class="fa fa-child" id="userFieldIcon"></i></div>
                    <div id="userFieldContainer"><input type="text" name="LastName" id="LastNameInputTxt" class="form-control inputFields defaultBoxShadow" placeholder="Last Name" required/></div>
                </div>

                <div id="UsernameContainer" class="LoginInputContainers ">
                    <div id="userFieldIconContainer" class="defaultBoxShadow"><i class="fa fa-lock" id="userFieldIcon"></i></div>
                    <div id="userFieldContainer"><input type="password" name="Password" id="PasswordInputTxt" class="form-control inputFields defaultBoxShadow" placeholder="Password" required/></div>
                </div>


                <div id="UsernameContainer" class="LoginInputContainers loginBtnContainer">
                    <button type="submit" class="btn bg-danger btn-info defaultBoxShadow" id="LoginBtn">Signup</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="module" src="~/Scripts/Custom/Authentication/Views/Signup.js"></script>